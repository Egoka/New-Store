<h3>Характеристики</h3>
<div class="characteristics">
    {{#each product.description}}
        <p>{{#each type}}{{typeName}}{{/each}}</p>
        {{#each option}}
        <div class="parameter">
            <p>{{name}}</p>
            <div class="points"></div>
            <div class="value">
                <p>{{value}}</p>
            </div>
        </div>
        {{/each}}
    {{/each}}
</div>
