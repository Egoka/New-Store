<div id="filterMobile" onclick="openFilter()">
    <i class="material-icons">tune</i>Фильтры
</div>
<div class="filter request">
    <ul class="collapsible expandable z-depth-0">
        {{#each filters}}
            <li class="active options">
                <div class="collapsible-header"><i class="material-icons">{{icon}}</i>{{_id}}</div>
                <div class="collapsible-body"><span>
                    {{#each options}}
                        <p>
                            <label>
                                <input class="js-filter"
                                       type="checkbox"
                                    {{#ifeq state 1}}checked="checked" {{/ifeq}}
                                    {{#ifeq state -1}}disabled="disabled"{{/ifeq}}
                                       data-id="{{_id}}"
                                       onclick="filter(event)"/>
                                <span class="optionsText" {{#ifeq state -1}}style="text-decoration: line-through"{{/ifeq}}>{{value}}</span>
                            </label>
                        </p>
                    {{/each}}
                </span></div>
            </li>
        {{/each}}
    </ul>
</div>