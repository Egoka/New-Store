{{#if error}}<div id="authorizationError">{{error}}</div>{{/if}}<input placeholder="Имя"       name="name"       type="text"       value="{{name}}"       required       class="validate{{#ifeq typeError 1}} invalid{{/ifeq}}"       autocomplete="off"       style="font-size: 20px; margin-bottom: 30px;"       onclick="authorizationErrorDisplayNone(event)"><input placeholder="Email"       name="email"       type="email"       value="{{email}}"       required       class="validate{{#ifeq typeError 2}} invalid{{/ifeq}}"       autocomplete="off"       style="font-size:20px; margin-bottom: 30px;"       onclick="authorizationErrorDisplayNone(event)"><input placeholder="Пароль"       name="registrationPassword"       type="password"       value="{{registrationPassword}}"       required       class="validate{{#ifeq typeError 3}} invalid{{/ifeq}}"       style="font-size: 20px;margin-bottom: 30px"       onclick="authorizationErrorDisplayNone(event)"><input placeholder="Пароль еще раз"       name="registrationPasswordDup"       type="password"       value="{{registrationPasswordDup}}"       required       class="validate{{#ifeq typeError 4}} invalid{{/ifeq}}"       style="font-size: 20px;margin-bottom: 30px"       onclick="authorizationErrorDisplayNone(event)"><button type="submit" class="btn">зарегестрироваться</button>