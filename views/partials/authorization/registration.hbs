{{#if error}}<div id="authorizationError">{{error}}</div>{{/if}}<div><input placeholder="Имя"       name="name"       type="text"       value="{{name}}"       class="{{#if typeError}}{{#ifeq typeError 1}} invalid{{else}}valid{{/ifeq}}{{/if}}"       autocomplete="off"       style="font-size: 20px; margin-bottom: 30px;"       onclick="authorizationErrorDisplayNone(event)">    <div class="prompt"></div></div><div><input placeholder="Email"       name="email"       type="email"       value="{{email}}"       class="{{#if typeError}}{{#ifeq typeError 2}} invalid{{else}}valid{{/ifeq}}{{/if}}"       autocomplete="off"       style="font-size:20px; margin-bottom: 30px;"       onclick="authorizationErrorDisplayNone(event)">    <div class="prompt"></div></div><div><input placeholder="Пароль"       name="registrationPassword"       type="password"       value="{{registrationPassword}}"       class="{{#if typeError}}{{#ifeq typeError 3}} invalid{{else}}valid{{/ifeq}}{{/if}}"       style="font-size: 20px;margin-bottom: 30px"       onclick="authorizationErrorDisplayNone(event)">    <div class="prompt"></div></div><div><input placeholder="Пароль еще раз"       name="registrationPasswordDup"       type="password"       value="{{registrationPasswordDup}}"       class="{{#if typeError}}{{#ifeq typeError 4}} invalid{{else}}valid{{/ifeq}}{{/if}}"       style="font-size: 20px;margin-bottom: 30px"       onclick="authorizationErrorDisplayNone(event)">    <div class="prompt"></div></div><button type="submit" class="btn">зарегестрироваться</button>